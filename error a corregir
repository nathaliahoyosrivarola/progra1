#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define MAX 100
using namespace std;
void cargar(double a[],double b[], int tam, int tam2);
void mostrar (double a[],double b[], int tam, int tam2);
void burbuja (double a[], int tam);
void intercalar (double a[],double b[], int tam, int tam2, double c[]);
int BusquedaLineal(double a[],int b,int tam);
void main()
{
	int m, n;
	double a[MAX], b[MAX], c[MAX];
	do
	{
		cout<<"introduzca el numero de elementos del vector a: ";
		cin>>n;
	}while(n<=0);
	do
	{
		cout<<"introduzca el numero de elementos del vector b: ";
		cin>>m;
	}while(m<=0);
	cargar(a,b,n,m);
	mostrar (a,b,n,m);
	burbuja (a,n);
	burbuja (b,m);
	intercalar(a,b,n,m,c);
	getch();
}
void cargar(double a[],double b[], int tam, int tam2)
{
	for(int i=0; i<tam ;i++)
	{	cout<<"A["<<i<<"]=";
		cin>>a[i];
	}
	cout<<endl;
		for(int i=0; i<tam2 ;i++)
	{	cout<<"B["<<i<<"]=";
		cin>>b[i];
	}
		cout<<endl;
}
void mostrar(double a[],double b[], int tam, int tam2)
{
	for(int i=0; i<tam ;i++)
	cout<<"A["<<i<<"]="<<a[i]<<endl;
	for(int i=0; i<tam2 ;i++)
	cout<<"B["<<i<<"]="<<b[i]<<endl;
}
void burbuja (double a[], int tam)
{
	for( int i=0;i<tam; i++)
	{
		for(int j=i+1; j<tam; j++)
		{
			if(a[i]>a[j])
			{
				int temp=a[i];
				a[i]=a[j];
				a[j]=temp;
			}
		}
	}

}
void intercalar (double a[],double b[], int tam, int tam2, double c[])
{
	int i=0;
	int j=0;
	int k=0;
	while((i<tam)&&(i<tam2))
	{
		if (a[i]<b[i])
		{
			c[k]=a[i];
			i++;
		}
		else 
		{ 
			c[k]=b[i];
			i++;
		}
		cout<<"C["<<k<<"]="<<c[k]<<endl;
		k++;
	}

}
