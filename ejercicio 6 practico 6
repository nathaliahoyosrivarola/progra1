// ejercicio 6 practico6.cpp : main project file.

#include "stdafx.h"
#include<iostream>
#include"conio.h"
#include "math.h"
using namespace std;
void main()
{ 
	float x;
	int n,s,i;
	cout<<"ingrese el valor de n: "<<endl;
	cin>>n;
	cout<< "ingrese el valor de x: "<<endl;
	cin>>x;
	s=0;
	for(i=1; i<=n;i++)
	{ 
		s=s+pow(x,i);
	}
	cout<< "el valor de la suma es:"<<s<<endl;
	getch();
}
